#!/bin/bash
# Script for removing all unnecessary output files generated by a LaTeX complier
# and keeping only the .pdf and .tex within a selected directory.
# Author: R. Belinskis

echo -e "Enter target directory: "
read directory

find $directory -name '*.aux' | xargs rm -f
find $directory -name '*.bbl' | xargs rm -f
find $directory -name '*.bcf' | xargs rm -f
find $directory -name '*.blg' | xargs rm -f
find $directory -name '*.log' | xargs rm -f
find $directory -name '*.xml' | xargs rm -f
find $directory -name '*.gz' | xargs rm -f
find $directory -name '*.toc' | xargs rm -f
find $directory -name '*.out' | xargs rm -f
find $directory -name '*.lof' | xargs rm -f
find $directory -name '*.lot' | xargs rm -f

echo "The unnecessary LaTeX compiler generated files have been removed. Bye, bye, files!"
